{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "unicorn", "oxc", "typescript", "react"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "env": {
    "builtin": true
  },
  "ignorePatterns": ["dist", "coverage", "src-tauri"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
